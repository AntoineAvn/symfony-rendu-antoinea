{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted ('ROLE_ADMIN') %}
        <a href="{{ path('app_user_index') }}">Retour à la liste</a>
    {% endif %}
    
    {% if (app.user.id == user.id) or (is_granted ('ROLE_ADMIN')) %}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}

    <a href="{{ path('app_article_showPrivateByUser', {'id': user.id}) }}">Voir les articles du profil</a>


{% endblock %}
